# 부동산 플랫폼 환경 변수 예시

# === 기본 설정 ===
NODE_ENV=development
PORT=4000
FRONTEND_PORT=3000

# === 데이터베이스 ===
DATABASE_URL=postgresql://username:password@localhost:5432/real_estate_platform
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=real_estate_platform
POSTGRES_USER=username
POSTGRES_PASSWORD=password

# === Redis (캐시) ===
REDIS_URL=redis://localhost:6379
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# === 지도 API ===
KAKAO_REST_API_KEY=your_kakao_rest_api_key
KAKAO_JAVASCRIPT_KEY=your_kakao_javascript_key
GOOGLE_MAPS_API_KEY=your_google_maps_api_key

# === 외부 데이터 소스 ===
NAVER_REAL_ESTATE_API_KEY=your_naver_api_key
KB_REAL_ESTATE_API_KEY=your_kb_api_key
KOREA_APPRAISAL_BOARD_API_KEY=your_kab_api_key

# === 인증 및 보안 ===
JWT_SECRET=your_super_secret_jwt_key_minimum_32_characters
JWT_EXPIRES_IN=7d
BCRYPT_ROUNDS=12

# === OAuth (선택사항) ===
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret
KAKAO_CLIENT_ID=your_kakao_client_id
KAKAO_CLIENT_SECRET=your_kakao_client_secret

# === AWS (파일 스토리지) ===
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=ap-northeast-2
AWS_S3_BUCKET=real-estate-platform-bucket

# === 크롤링 설정 ===
CRAWLING_DELAY=2000
CRAWLING_MAX_RETRIES=3
CRAWLING_TIMEOUT=30000
USER_AGENT=RealEstatePlatform/1.0

# === 이메일 (알림) ===
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_email_password

# === 모니터링 ===
SENTRY_DSN=your_sentry_dsn_url
LOG_LEVEL=info
ENABLE_METRICS=true

# === 기능 플래그 ===
ENABLE_REAL_TIME_CRAWLING=true
ENABLE_PRICE_PREDICTION=false
ENABLE_3D_MAPS=false
ENABLE_COLLABORATION=false

# === 캐시 설정 ===
CACHE_TTL_APARTMENTS=3600
CACHE_TTL_SEARCH_RESULTS=1800
CACHE_TTL_PRICE_DATA=900

# === 데이터 처리 ===
MAX_SEARCH_RADIUS=50
MAX_SEARCH_RESULTS=1000
BATCH_SIZE=100

# === 파일 업로드 ===
MAX_FILE_SIZE=50MB
ALLOWED_FILE_TYPES=csv,xlsx,json

# === 개발 도구 ===
ENABLE_DEBUG=true
ENABLE_CORS=true
CORS_ORIGIN=http://localhost:3000

# === 데이터베이스 연결 풀 ===
DB_POOL_MIN=2
DB_POOL_MAX=20
DB_POOL_IDLE_TIMEOUT=30000

# === 레이트 리미팅 ===
RATE_LIMIT_WINDOW=900000
RATE_LIMIT_MAX_REQUESTS=100

# === 백업 설정 ===
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
BACKUP_S3_BUCKET=real-estate-platform-backups